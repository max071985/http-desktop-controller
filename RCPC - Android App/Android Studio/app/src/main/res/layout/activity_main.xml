<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:isScrollContainer="true"
        app:layout_constraintTop_toBottomOf="@id/linearLayout3">



        <Button
            android:id="@+id/btnMute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mute" />

        <Button
            android:id="@+id/btnUnMute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unmute" />

        <Button
            android:id="@+id/btnVolumeUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volume UP" />

        <Button
            android:id="@+id/btnVolumeDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volume Down" />

        <Button
            android:id="@+id/btnVolumeSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volume SET" />

        <Button
            android:id="@+id/btnVolumeGet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volume GET" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Server response label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="25dp"
            android:text="Value:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0.1"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(The textbox above controls the intensity of the controls below. e.g: set_volume(value)"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp"/>

</android.support.constraint.ConstraintLayout>